<div class="row-fluid">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Restaurantes encontrados</h3>
            </div>
            <div class="panel-body">

                {{! LISTA DE RESTAURANTES }}
                {{#each model as |restaurant|}}
                <div class="media">
                    <a class="media-left"><img class="media-object" src={{restaurant-img restaurant.id}}></a>
                    <div class="media-body">
                        <h4 class="media-heading">{{restaurant.name}}</h4>
                        {{restaurant.description}}
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>